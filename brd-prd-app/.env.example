# Environment Variables Template
# Copy this file to .env.local for development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development: SQLite (file-based)
DATABASE_URL="file:./dev.db"

# Production: PostgreSQL (Railway)
# DATABASE_URL="postgresql://username:password@host:port/database"

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
# Local development URL
NEXTAUTH_URL="http://localhost:3002"

# Production URL (update when deploying)
# NEXTAUTH_URL="https://your-app.vercel.app"

# Secret for JWT tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-32-characters-minimum-length"

# =============================================================================
# OAUTH PROVIDERS
# =============================================================================
# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# =============================================================================
# AI APIS
# =============================================================================
# OpenAI API (get from platform.openai.com)
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# Google Gemini API (get from ai.google.dev)
GEMINI_API_KEY="your-gemini-api-key"

# =============================================================================
# PAYMENT PROCESSING (Stripe)
# =============================================================================
# Development: Use Stripe test keys
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Production: Use Stripe live keys
# STRIPE_PUBLIC_KEY="pk_live_your-stripe-public-key"
# STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
# STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# =============================================================================
# CACHING & SESSION STORAGE (Redis)
# =============================================================================
# Development: Local Redis or skip
REDIS_URL="redis://localhost:6379"

# Production: Railway Redis or Upstash
# REDIS_URL="redis://username:password@host:port"

# =============================================================================
# FILE STORAGE (AWS S3)
# =============================================================================
# AWS credentials for file uploads
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_REGION="us-east-1"

# =============================================================================
# EMAIL SERVICE (SendGrid)
# =============================================================================
# SendGrid API key for transactional emails
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application URL (must match NEXTAUTH_URL)
APP_URL="http://localhost:3002"

# Environment
NODE_ENV="development"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-32-character-hex-encryption-key"

# JWT secret (can be same as NEXTAUTH_SECRET)
JWT_SECRET="your-jwt-secret-key"

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Sentry for error tracking
SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/project-id"

# PostHog for user analytics
POSTHOG_KEY="your-posthog-project-key"
POSTHOG_HOST="https://app.posthog.com"

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limits
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_REQUESTS_PER_HOUR="1000"

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable/disable features for development
ENABLE_REFERRAL_SYSTEM="true"
ENABLE_TEAM_COLLABORATION="false"
ENABLE_ADVANCED_TEMPLATES="true"
ENABLE_API_ACCESS="false"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable detailed logging
DEBUG="true"
VERBOSE_LOGGING="false"

# Skip email verification in development
SKIP_EMAIL_VERIFICATION="true"

# Mock payment processing
MOCK_PAYMENTS="true"